<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodels="clr-namespace:SmartClient.Core.ViewModels;assembly=SmartClient.Core"
             x:DataType="viewmodels:MainViewModel"
             xmlns:models="clr-namespace:SmartClient.Data.Models;assembly=SmartClient.Data"
             x:Class="SmartClient.Gui.MainPage"
             BackgroundColor="#F4F8EC"
             xmlns:converters="clr-namespace:SmartClient.Gui.Converters"
             xmlns:enums="clr-namespace:SmartClient.Data.Enums;assembly=SmartClient.Data"
             Shell.BackgroundColor="#F4F8EC"
             >

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="StrokeShape" Value="15">
                </Setter>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="40"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Black" Opacity="0.2" Offset="5,5" />
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="Black" Opacity="0.2" Offset="5,5" />
                    </Setter.Value>
                </Setter>
                <Setter Property="FontFamily" Value="Raleway-Bold"/>
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="WidthRequest" Value="200"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="BackgroundColor" Value="#A4A6FF"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
                                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#676AFF"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style x:Key="Actionlink" TargetType="Label">
                <Setter Property="TextColor" Value="#00014E"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="#676AFF"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style x:Key="FilterButton" TargetType="Button">
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal" />
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#A4A6FF"/>
                                    <Setter Property="TextColor" Value="#fff"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="HorizontalOptions" Value="Start"/>
                <Setter Property="TextColor" Value="#00014E"/>
                <Setter Property="FontFamily" Value="Raleway"/>
                <Setter Property="FontSize" Value="Large"/>
            </Style>
            <converters:ResourceKeyToColorConverter x:Key="ResourceKeyToColorConverter" />
            <toolkit:EnumToBoolConverter x:Key="AscendingConverter">
                <toolkit:EnumToBoolConverter.TrueValues>
                    <enums:FilterMode>Ascending</enums:FilterMode>
                </toolkit:EnumToBoolConverter.TrueValues>
            </toolkit:EnumToBoolConverter>
            <toolkit:EnumToBoolConverter x:Key="DescendingConverter">
                <toolkit:EnumToBoolConverter.TrueValues>
                    <enums:FilterMode>Descending</enums:FilterMode>
                </toolkit:EnumToBoolConverter.TrueValues>
            </toolkit:EnumToBoolConverter>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Abmelden" Command="{Binding LogoutCommand}"/>
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="Auto,*" Margin="10,0,10,0" Padding="10,10,10,0" RowSpacing="2">
        <Grid RowDefinitions="Auto,Auto" RowSpacing="20">
            <Grid ColumnDefinitions="Auto,Auto,*,Auto" ColumnSpacing="20" Margin="70,0,70,0">
                <Button Text="Starten" Style="{StaticResource ActionButton}"  HorizontalOptions="Start" Command="{Binding StartAppCommand}"/>
                <Button Grid.Column="1" Text="Neu laden" Style="{StaticResource ActionButton}"  HorizontalOptions="Start" Command="{Binding LoadCommand}"/>
                <Border Grid.Column="3" StrokeShape="25" Stroke="{StaticResource CapCornBlue}" WidthRequest="200" Padding="10,0,10,0">
                    <HorizontalStackLayout>
                        <Entry Placeholder="Profile suchen" Text="{Binding SearchQuery}" TextColor="{StaticResource CapCornBlue}" PlaceholderColor="#5167e0" VerticalOptions="Center" WidthRequest="150"/>
                        <Image Source="search.png" HeightRequest="15" HorizontalOptions="End"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>
            <Grid ColumnDefinitions="2*,*,*,1.5*,*,Auto,Auto,*" Grid.Row="1" ColumnSpacing="20">
                <HorizontalStackLayout>
                    <Button Text="Name" Style="{StaticResource FilterButton}" Command="{Binding ToggleFilterCommand}" CommandParameter="{Binding Text, Source={RelativeSource Self}}"/>
                    <Image Source="ascending.png" WidthRequest="25" IsVisible="{Binding NameFilterMode, Converter={StaticResource AscendingConverter}}"/>
                    <Image Source="descending.png" WidthRequest="25" IsVisible="{Binding NameFilterMode, Converter={StaticResource DescendingConverter}}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Column="1">
                    <Button Text="Ort" Style="{StaticResource FilterButton}" Margin="-10,0,0,0" Command="{Binding ToggleFilterCommand}" CommandParameter="{Binding Text, Source={RelativeSource Self}}"/>
                    <Image Source="ascending.png" WidthRequest="25" IsVisible="{Binding OrtFilterMode, Converter={StaticResource AscendingConverter}}"/>
                    <Image Source="descending.png" WidthRequest="25" IsVisible="{Binding OrtFilterMode, Converter={StaticResource DescendingConverter}}"/>
                </HorizontalStackLayout>
                <HorizontalStackLayout Grid.Column="2">
                    <Button Text="Person" Style="{StaticResource FilterButton}" Margin="-30,0,0,0"  Command="{Binding ToggleFilterCommand}" CommandParameter="{Binding Text, Source={RelativeSource Self}}"/>
                    <Image Source="ascending.png" WidthRequest="25" IsVisible="{Binding PersonFilterMode, Converter={StaticResource AscendingConverter}}"/>
                    <Image Source="descending.png" WidthRequest="25" IsVisible="{Binding PersonFilterMode, Converter={StaticResource DescendingConverter}}"/>
                </HorizontalStackLayout>
                
                
            </Grid>
        </Grid> 
        <CollectionView Grid.Row="1" ItemsSource="{Binding FilteredProfiles}" SelectionMode="Single" SelectedItem="{Binding SelectedProfile}">
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center">
                    <Label HorizontalOptions="Center" Text="Keine Profile vorhanden" FontFamily="Raleway"  FontSize="50"/>
                    <Button Text="Add Local Profile"/>
                </StackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate >
                <DataTemplate x:DataType="models:Profile">
                    <Border Style="{StaticResource CardStyle}" BackgroundColor="{Binding ColorKey,Converter={StaticResource ResourceKeyToColorConverter}}" >
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="2*,*,*,1.5*,*,Auto,Auto,*" ColumnSpacing="20">
                            <Label Text="{Binding CCID}" FontSize="14"  TextColor="{StaticResource TextSecondary}"/>
                            <Label Text="{Binding Name}" Grid.Row="1" FontAttributes="Bold" FontSize="21" TextColor="{StaticResource TextMain}"/>
                            <Label Text="{Binding City}" Grid.RowSpan="2" VerticalOptions="Center" FontSize="17" Grid.Column="1" TextColor="{StaticResource TextMain}" />
                            <Label Text="{Binding Contact}" Grid.Column="2" Grid.RowSpan="2" FontSize="17" VerticalOptions="Center" TextColor="{StaticResource TextMain}" />
                            <Label Text="{Binding Tele}" Grid.Column="3" FontSize="17"  Style="{StaticResource Actionlink}"/>
                            <Label Text="{Binding Mail}" Grid.Column="3" Grid.Row="1" FontSize="17" Style="{StaticResource Actionlink}" />
                            <Label Text="{Binding Ip_Address}" Grid.Column="4" Grid.RowSpan="2" FontSize="17" VerticalOptions="Center" TextColor="{StaticResource TextMain}" />
                            <Label Text="{Binding Port}" Grid.Column="5" Grid.RowSpan="2" FontSize="17" VerticalOptions="Center" TextColor="{StaticResource TextMain}" />
                            <Label Text="{Binding Version}" Grid.Column="6" Grid.RowSpan="2" FontSize="17" VerticalOptions="Center" TextColor="{StaticResource TextMain}" />

                            <Image Source="available.png"
                                   Grid.Column="7" Grid.RowSpan="2" 
                                   HeightRequest="30"
                                   VerticalOptions="Center">
                            </Image>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
