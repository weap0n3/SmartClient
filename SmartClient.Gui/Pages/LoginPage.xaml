<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartClient.Gui.Pages.LoginPage"
             xmlns:viewmodels="clr-namespace:SmartClient.Core.ViewModels;assembly=SmartClient.Core"
             x:DataType="viewmodels:LoginViewModel">
    <Grid>
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" WidthRequest="400" HorizontalOptions="Center"  VerticalOptions="Center">

            <VerticalStackLayout Padding="10,0,10,10">
                <VerticalStackLayout Padding="10,0,10,10">
                    <!-- Legend-style label -->
                    <Label 
                        Text="Benutzername"
                        BackgroundColor="White"
                        Margin="20,0,0,-10"
                        Padding="5,0"
                        FontFamily="LensGrotesk"
                        FontSize="18"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        ZIndex="1"/>
                    <!-- Bordered content box -->
                    <Border
                        Stroke="Gray"
                        StrokeThickness="1"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 6">

                        <!-- Form inside the border -->
                        <VerticalStackLayout Spacing="10">
                            <Entry Text="{Binding UserName}"/>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
            <VerticalStackLayout Padding="10,0,10,10" Grid.Row="1">
                <VerticalStackLayout Padding="10,0,10,10">
                    <!-- Legend-style label -->
                    <Label 
                        Text="Passwort"
                        FontFamily="LensGrotesk"
                        FontSize="18"
                        FontAttributes="Bold"
                        BackgroundColor="White"
                        Margin="20,0,0,-10"
                        Padding="5,0"
                        HorizontalOptions="Start"
                        ZIndex="1"/>
                    <!-- Bordered content box -->
                    <Border
                        Stroke="Gray"
                        StrokeThickness="1"
                        BackgroundColor="Transparent"
                        StrokeShape="RoundRectangle 6">

                        <!-- Form inside the border -->
                        <VerticalStackLayout Spacing="10">
                            <Entry Text="{Binding Password}"/>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <HorizontalStackLayout Grid.Row="4" Margin="20,0,0,0">
                <Label Text="Remember me" VerticalOptions="Center"                         
                        FontFamily="LensGrotesk"
                        FontSize="18"
                        FontAttributes="Bold"/>
                <CheckBox VerticalOptions="Center" IsChecked="{Binding RememberMe}"/>
            </HorizontalStackLayout>
            <Button FontFamily="LensGrotesk" FontSize="18" FontAttributes="Bold" Text="Anmelden" Grid.Row="5" Command="{Binding LoginCommand}" Background="#2c48e1"/>
        </Grid>
    </Grid>
</ContentPage>